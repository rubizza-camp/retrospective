<div class='box'>
  <h1 class='title'>Your boards</h1>
</div>
<table class='table is-fullwidth'>
  <thead>
    <tr>
      <th>TITLE</th>
      <th>DATE</th>
      <th>MEMBERSHIP</th>
      <th>ACTIONS</th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= link_to board.title, board %></td>
        <td><%= board.created_at %></td>
        <td><%= 'status' if true %></td>
        <td>
          <%= link_to 'continue',
              continue_board_path(board),
              method: :post %>
          <%= link_to 'edit',
              edit_board_path(board) %>
          <%= link_to 'delete', board,
              method: :delete,
              data: { confirm: 'Are you sure you want to delete this board?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board', new_board_path %>
